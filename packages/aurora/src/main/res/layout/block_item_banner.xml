<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content">

  <androidx.recyclerview.widget.RecyclerView
    android:id="@+id/banner_recycler"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/block_space"
    android:layout_marginTop="@dimen/block_space" />

  <com.sofar.base.widget.banner.BannerIndicator
    android:id="@+id/banner_indicator"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignBottom="@+id/banner_recycler"
    android:layout_centerHorizontal="true"
    android:layout_marginBottom="5dp" />

</RelativeLayout>