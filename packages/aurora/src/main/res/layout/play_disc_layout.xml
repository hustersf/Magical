<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/play_disc_root"
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:fresco="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:layout_marginTop="-15dp">

  <ImageView
    android:id="@+id/disc"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="142dp"
    android:src="@drawable/play_disc" />

  <ImageView
    android:id="@+id/needle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:src="@drawable/play_disc_needle" />

  <com.sofar.image.widget.SofarImageView
    android:id="@+id/cover"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignBottom="@+id/disc"
    android:layout_alignEnd="@+id/disc"
    android:layout_alignStart="@+id/disc"
    android:layout_alignTop="@+id/disc"
    android:padding="45dp"
    fresco:placeholderImageScaleType="centerCrop"
    fresco:roundAsCircle="true" />

</RelativeLayout>