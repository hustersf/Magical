<?xml version="1.0" encoding="utf-8"?>
<resources>

  <style name="Widget" />

  <style name="Widget.RecyclerView">
    <item name="android:id">@id/recycler_view</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:scrollbars">vertical</item>
    <item name="android:scrollbarStyle">outsideOverlay</item>
  </style>

  <style name="Widget.RefreshLayout">
    <item name="android:id">@id/refresh_layout</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:layout_width">match_parent</item>
  </style>

  <style name="TabLayout.TextAppearance" parent="TextAppearance.AppCompat">
    <item name="android:textSize">16dp</item>
    <item name="android:textColor">@color/tab_layout_text_colors</item>
  </style>

  <style name="Widget.TabLayout">
    <item name="android:id">@id/tab_layout</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">@dimen/tab_height</item>
    <item name="tabMaxWidth">0dp</item>
    <item name="tabMinWidth">0dp</item>
    <item name="tabPaddingStart">@dimen/tab_padding_start</item>
    <item name="tabPaddingEnd">@dimen/tab_padding_end</item>
    <item name="tabTextAppearance">@style/TabLayout.TextAppearance</item>
    <item name="tabIndicator">@drawable/tab_indicator_normal</item>
  </style>

  <style name="Widget.ViewPager">
    <item name="android:id">@id/view_pager</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">match_parent</item>
  </style>

</resources>